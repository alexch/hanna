!!!
%html{ :lang => 'en' }
  %head
    %title= page_title
    %meta{ 'http-equiv' => 'Content-Type', :content => "text/html; charset=#{page_encoding}" }
    %link{ :rel => 'stylesheet', :href => relative_path('styles.css'), :type => 'text/css', :media => 'screen' }
        
  %body{ :id => page_type }
    #wrapper
      #header= yield :header
      #content= yield
      - if sidebar_content = yield(:sidebar)
        .sidebar= sidebar_content
      #footer-push
    #footer
      = link_to 'http://github.com/mislav/hanna' do
        %strong Hanna
        RDoc template
